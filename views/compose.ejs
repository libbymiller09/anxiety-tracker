<%- include("partials/header"); -%>

  <h1>Compose</h1>
  <form class="" action="/compose" method="post">
    <div class="form-group">
      <label for="postTitle">Title</label>
      <input class="form-control form-control-lg" type="text" name="postTitle" placeholder="Enter main theme of anxiety">
      <label for="postDate">Date</label>
      <input class="form-control form-control-lg" type="text" name="postDate">
      <label for="postContent">Post</label>
      <textarea class="form-control form-control-lg" name="postContent" rows="5" cols="30" placeholder="Explain what happended in detail, for later reference"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
  </form>

<%- include("partials/footer"); -%>
